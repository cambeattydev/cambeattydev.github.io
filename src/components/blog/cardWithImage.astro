---
import { DEFAULT_BLOG_IMAGE } from "../../config";
export interface Props {
  post: Record<string, any>;
}
const { post } = Astro.props;
---

<div
  class="inline-flex flex-col flex-grow max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700"
>
  <a href={post.url}>
    <img
      class="rounded-t-lg"
      src={post.frontmatter.heroImage ?? DEFAULT_BLOG_IMAGE}
      alt="Post image"
    />
  </a>

  <div class="pt-5 flex-col inline-flex flex-grow">
    <a href={post.url}>
      <h5
        class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {post.frontmatter.title}
      </h5>
    </a>
    <time
      class="mb-2 dark:text-gray-200 text-md italic"
      datetime={post.frontmatter.pubDate}
    >
      {
        new Date(post.frontmatter.pubDate).toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </time>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {post.frontmatter.description}
    </p>
    <div class="flex-grow"></div>
    <div class="flex justify-end">
      <a
        href={post.url}
        class="justify-self-end inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        Read more
        <svg
          aria-hidden="true"
          class="w-4 h-4 ml-2 -mr-1 flex-grow-0"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
